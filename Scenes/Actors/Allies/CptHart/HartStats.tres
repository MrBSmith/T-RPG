[gd_resource type="Resource" load_steps=2 format=2]

[sub_resource type="GDScript" id=1]
script/source = "extends Resource

export var HP : int setget set_HP, get_HP
export var MP : int setget set_MP, get_MP
export var actions : int setget set_actions, get_actions
export var movements : int setget set_movements, get_movements
export var attack_range : int setget set_attack_range, get_attack_range

func set_HP(value : int):
	HP = max(0, value) as int

func get_HP() -> int:
	return HP

func set_MP(value : int):
	MP = max(0, value) as int

func get_MP() -> int:
	return MP

func set_actions(value : int):
	actions = max(0, value) as int

func get_actions() -> int:
	return actions

func set_movements(value : int):
	movements = max(0, value) as int

func get_movements() -> int:
	return movements

func set_attack_range(value: int):
	attack_range = value

func get_attack_range() -> int:
	return attack_range
"

